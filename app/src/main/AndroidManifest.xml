<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.korinc.sockettest"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="ru.korinc.sockettest.ST"
            android:label="@string/app_name"
            android:launchMode="singleTask" >

            <!-- android:screenOrientation="portrait" -->

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="ru.korinc.sockettest.MappingList"
            android:label="@string/title_activity_mapping_list"
            android:theme="@android:style/Theme.Holo.Light.Dialog" >
        </activity>
        <activity
            android:name="ru.korinc.sockettest.VoiceFnMappingList"
            android:label="@string/title_activity_voice_fn_mapping_list"
            android:theme="@android:style/Theme.Holo.Light.Dialog" >
        </activity>
        <activity
            android:name="ru.korinc.sockettest.FnSelect"
            android:label="@string/title_activity_fn_select"
            android:theme="@android:style/Theme.Holo.Light.Dialog" >
        </activity>
        <activity
            android:name="ru.korinc.sockettest.FnBind"
            android:label="@string/title_activity_fn_select"
            android:theme="@android:style/Theme.Holo.Light.Dialog" >
        </activity>
        <activity
            android:name="ru.korinc.sockettest.LaunchFromTaskBar"
            android:label="@string/title_activity_launch_from_task_bar" 
             android:theme="@android:style/Theme.Holo.Light.Dialog">
        </activity>
    </application>

</manifest>
